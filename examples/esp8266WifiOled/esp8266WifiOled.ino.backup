#include <Wire.h>
#include <Adafruit_SSD1306.h>
#include <Adafruit_GFX.h>
#include "esp8266WifiOled_menu.h"

Adafruit_SSD1306 gfx(128, 32, &Wire, 16);

void setup() {
    //while(!Serial);
    Serial.begin(115200);
    Serial.println("Ser setup");

    if(!gfx.begin(SSD1306_SWITCHCAPVCC, 0x3c)) {
        Serial.println("Display not allocated - check connections");
        for(;;) yield();
    }
    Serial.println("Display 0");

	gfx.clearDisplay();
    gfx.setTextSize(1);      // Normal 1:1 pixel scale
    gfx.setTextColor(WHITE); // Draw white text
    gfx.print("Hello world!");
    gfx.display();
    Serial.println("Display 1");
    delay(10000);
    Serial.println("Display 2");

//    setupMenu();
}

void loop() {
